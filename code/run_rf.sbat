#!/bin/bash

###############################
#                             #
#  1) Job Submission Options  #
#                             #
###############################

# Name
#SBATCH --job-name=rf

# Resources
# For MPI, increase ntasks-per-node
# For multithreading, increase cpus-per-task
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --cpus-per-task=1
#SBATCH --mem-per-cpu=4GB
#SBATCH --time=20:00:00

# Account
#SBATCH --account=pschloss1
#SBATCH --partition=standard

# Logs
#SBATCH --mail-user=nlesniak@umich.edu
#SBATCH --mail-type=END,FAIL
#SBATCH -o scratch/slurm/rf.output.%a.out

# Environment
#SBATCH --export=ALL

# Array
#SBATCH --array=1-100

# vector index starts at 0 so shift array by one

seed=$(($SLURM_ARRAY_TASK_ID - 1))

#####################
#                   #
#  2) Job Commands  #
#                   #
#####################


Rscript code/R/main.R --seed $seed --model Random_Forest --level random_outcome --data  data/process/otu_input_data.csv --hyperparams data/default_hyperparameters.csv --outcome clearance --permutation
#Rscript code/R/main.R --seed $seed --model Random_Forest --level genus --data  data/process/genus_input_data.csv --hyperparams data/default_hyperparameters.csv --outcome clearance --permutation
#Rscript code/R/main.R --seed $seed --model Random_Forest --level family --data  data/process/family_input_data.csv --hyperparams data/default_hyperparameters.csv --outcome clearance --permutation
#Rscript code/R/main.R --seed $seed --model Random_Forest --level order --data  data/process/order_input_data.csv --hyperparams data/default_hyperparameters.csv --outcome clearance --permutation
